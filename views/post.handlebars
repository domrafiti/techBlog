<div class="text-center">
  <h2>{{title}}</h2>
  <p>{{description}}</p>
  <p>Created by {{name}} on {{format_date date_created}}</p>
  <p>
    <button class="btn btn-primary">Leave a Comment</button>
  </p>
</div>

<div class="col-auto">
  <h3>Create a New Totally Rad Comment:</h3>
  <p></p>
  <form class="form new-project-form">
    <div class="form-group">
      <label for="project-name">User Name:</label>
      <input class="form-input" type="text" id="project-name" name="project-name" />
    </div>
    <div class="form-group">
      <label for="project-desc">Comment:</label>
      <textarea class="form-input" id="project-desc" name="project-desc"></textarea>
    </div>
    <div class="form-group">
      <button id="button-create" type="submit" class="btn btn-primary">Leave my Words</button>
    </div>
  </form>
</div>

{{#if comments.length}}
<div class="card">
  <div class="card-header">
    Comments
  </div>
  {{#each comments as |comment|}}
  <div class="card-body">
    <blockquote class="blockquote mb-0">
      <p>{{comment}}</p>
      <footer class="blockquote-footer">Words left by: <cite title="Source Title">{{user_name}}</cite></footer>
    </blockquote>
  </div>
  {{#/each}}
</div>